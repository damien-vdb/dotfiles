{{- if .sdkman -}}
#!/bin/bash
set -e

export SDKMAN_DIR=/opt/sdkman

if [ -d "$SDKMAN_DIR" ]; then
    echo "SDKMan is already installed at $SDKMAN_DIR"
    exit 0
fi

echo "Installing SDKMan in ${SDKMAN_DIR}..."
curl -s "https://get.sdkman.io?rcupdate=false&ci=true" | bash

# Source SDKMAN to make sdk command available
source "$SDKMAN_DIR/bin/sdkman-init.sh"

echo "Installing Maven and Java via SDKMan..."
sdk install maven 3.9.11
sdk install java 25.0.1-graalce

echo "Java and Maven installed!"
echo "Note: Add 'source /opt/sdkman/bin/sdkman-init.sh' to your .bashrc or .profile to use sdk command"
{{- end -}}
